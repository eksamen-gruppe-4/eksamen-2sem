---
import Button from "../components/Button.astro";
---

<!--Katinka --><!--HUSK MOBILE FIRST! -->
<header>
  <div class="logo">
    <a href="/">
      <img src="../svg/logo.svg" alt="logo" />
    </a>
    <p class="font1">Hair Creations by Gaia</p>
  </div>
  <nav>
    <ul class="menu">
      <li><a href="/#moed_gaia">Mød Gaia</a></li>
      <li><a href="/behandlinger">Behandlinger & Priser</a></li>
      <li><a href="/products/">Produkter</a></li>
      <li><a href="/undervisning">Undervisning</a></li>
      <li><a href="/#lokation">Praktisk Info</a></li>
      <li>
        <a href="/#bestil_tid"
          ><Button class="button_orange" buttontext="Bestil tid" /></a>
      </li>
    </ul>

    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </nav>
</header>

<style>
  /*MOBILE FIRST!!*/
  header {
    top: 0;
    z-index: 1000; /**Fundet hjælp på ChatGPT!**/
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    background-color: var(--primary);
    border-bottom: 3px solid var(--secondary);
  }

  .logo {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .logo img {
    width: 50px;
    height: 50px;
    padding: 0;
  }
  .font1 {
    font-family: var(--font1);
    font-weight: bolder;
    font-size: larger;
    justify-content: left;
  }
  .menu a {
    display: block;
    padding: 10px;
    transition: color 0.3s;
  }
  .menu a:hover {
    color: var(--tertiary);
  }
  /**Burger menu mobile**/
  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
    display: block;
  }
  .burger .line {
    width: 100%;
    height: 2px;
    background-color: var(--secondary);
    margin-bottom: 5px;
    transition: 0.2s linear;
  }
  .menu {
    display: none;
  }
  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
    transition: 0.2s linear;
  }
  .burger.active .line:nth-child(2) {
    opacity: 0;
    transition: 0.15s linear;
  }
  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
    transition: 0.2s linear;
  }
  nav.active .menu {
    display: block;
    background-color: var(--primary);
    position: absolute;
    top: 87px;
    left: 0;
    width: 100%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    z-index: 2;
  }
  nav.active .menu li {
    margin: 10px 20px;
    list-style-type: none;
  }

  @media screen and (min-width: 800px) {
    header {
      position: sticky;
    }

    header nav ul {
      display: flex;
      justify-content: space-between;
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 0;
      padding-bottom: 0.4rem;
      gap: 30px;
      overflow-x: auto;
    }
    .logo img {
      width: 70px;
      height: 70px;
    }

    .burger {
      display: none;
    }
  }
</style>

<script>
  //JS til burger menu
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  const links = document.querySelectorAll(".menu li a");
  //Burger menu
  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  });
  links.forEach((link) => {
    link.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
    });
  });
</script>
