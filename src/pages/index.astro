<style>
  main {
    background-image: url("../waves-kopi.png"); /*OBS ændre til vores egen baggrund!!*/
    width: 100%;
    margin: 0;
    background-attachment: fixed;
  }
  /* OBS KODE HVIS VI ENDER MED LOTTIEFILE .lottie {
  display: flex;
  position: relative;
  width: 100%;
  z-index: 0;
  } */
  .hero_section {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 10%;
  }
  .hero_img {
    animation: zoomIn 10s infinite alternate;
    width: 100%;
    overflow: hidden;
  }
  /*Zoom-in animation*/
  @keyframes zoomIn {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.1);
    }
  }
  .title_book {
    position: absolute;
    z-index: 1;
  }
  .title_book h1 {
    color: var(--primary);
    font-size: 40pt;
    text-transform: uppercase;
    padding-bottom: 2rem;
  }

  #lokation,
  .kundeanmeldelser {
    border: 3px solid var(--secondary);
    border-radius: 30px;
    background-color: var(--primary);
  }
  .lokation img {
    width: 100%;
  }
  .citat {
    font-family: var(--fontcitat);
  }
  /*Styling desktop */
  @media (min-width: 800px) {
    .title_book h1 {
      font-size: 64pt;
    }
    .lokation {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
    }
    .parkeringsinfo {
      grid-column: 1/2;
      grid-row: 1/2;
    }
    .map_img {
      grid-column: 2/3;
    }
  }
</style>
