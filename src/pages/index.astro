<style>
  .hero_section {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 30px;
    margin: 1rem;
  }
  .hero_img {
    animation: zoomIn 10s infinite alternate;
    width: 100%;
    overflow: hidden;
  }

  .hero_img img {
    filter: brightness(75%);
  }
  /*Zoom-in animation*/
  @keyframes zoomIn {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.1);
    }
  }
  .title_book {
    position: absolute;
    z-index: 1;
  }
  .title_book h1 {
    color: var(--primary);
    font-size: 32pt;
    text-transform: uppercase;
    padding-bottom: 1.5rem;
  }

  #lokation,
  .kundeanmeldelser,
  #moed_gaia,
  #undervisning,
  .produkter,
  #bestil_tid {
    border: 3px solid var(--secondary);
    border-radius: 30px;
    background-color: var(--primary);
  }
  #moed_gaia p {
    padding-top: 1rem;
  }
  #lokation h3 {
    padding-top: 1rem;
  }
  .produkter {
    display: grid;
    justify-content: center;
  }
  .produkter p {
    padding-bottom: 2rem;
  }
  .moed_gaia img,
  .undervisning img {
    max-width: 100%;
  }
  .undervisningsknap {
    padding: 2rem;
  }
  #undervisning p {
    padding-left: 2rem;
  }
  .lokation img {
    width: 100%;
  }
  .lokation p,
  .afbud p,
  .klausul p {
    margin-top: 1rem;
  }
  .citat {
    font-family: var(--fontcitat);
  }

  /*galleri*/

  .gallery-container {
    position: relative;
    width: 100%;
    height: 70vh;
    overflow: hidden;
  }

  .gallery {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 100%;
    height: 100%;
  }

  .gallery-item {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    object-fit: cover;
  }

  .gallery-item:first-child {
    opacity: 1; /* Første billede vises som standard */
  }

  @media (max-width: 799px) {
    .card_container {
      display: grid;
      grid-template-columns: 1fr;
      justify-items: center;
    }
  }

  /*Styling desktop */
  @media (min-width: 800px) {
    .hero_section {
      margin: 3rem;
    }

    .card_container {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
    }
    .title_book h1 {
      font-size: 64pt;
    }
    .moed_gaia {
      display: grid;
      grid-template-columns: 1fr 1fr;
      /* align-items: center; */
      gap: 1rem;
    }

    .lokation {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
      gap: 1rem;
    }
    .parkeringsinfo {
      grid-column: 1/2;
      grid-row: 1/2;
    }
    .klausul {
      grid-column: 2/3;
      grid-row: auto;
    }
    .map_img {
      grid-column: 2/3;
    }
    /*galleri desk*/

    .gallery-container {
      height: 100vh;
    }
    .gallery {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 1rem;
      width: 100%;
      height: auto;
    }

    .gallery-item {
      position: relative;
      opacity: 1;
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* .gallery-item:hover {
      transform: scale(1.1);
    } */

    #img1 {
      grid-column: 1 / 2;
      grid-row: span 2;
      object-fit: cover;
    }

    #img2 {
      grid-column: 2 / 3;
      grid-row: 1 / 2;
    }

    #img3 {
      grid-column: 2 / 3;
      grid-row: 2 / 3;
    }

    #img4 {
      grid-column: 3 / 4;
      grid-row: span 2;
    }

    #img5 {
      grid-column: 4 / 5;
      grid-row: 1 / 2;
    }

    #img6 {
      grid-column: 4 / 5;
      grid-row: 2 / 3;
    }

    .undervisning {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr;
    }
    .right {
      grid-column: 2/3;
      grid-row: 1/2;
    }
  }
</style>

<script>
  /*galleri
  DET GØR IKKE NOGET AT DEN SIGER DET DER PROPERTY STYLE DOES NOT EXIST ON TYPE ELEMENT,
  @ts-ignore er tilføjet for at den ikke siger fejl*/

  if (window.innerWidth < 800) {
    let currentImageIndex = 0;
    const images = document.querySelectorAll(".gallery-item");

    // Funktion til at vise næste billede
    function showNextImage() {
      // Fjern synligheden fra det nuværende billede
      // @ts-ignore
      images[currentImageIndex].style.opacity = 0;

      // Opdater index til næste billede, eller loop tilbage til det første billede
      currentImageIndex = (currentImageIndex + 1) % images.length;

      // Vis det næste billede med fade-effekt
      // @ts-ignore
      images[currentImageIndex].style.opacity = 1;
    }

    // Sæt interval for at ændre billede hver 6. sekund
    setInterval(showNextImage, 6000);

    // Initialiser galleriet ved at vise det første billede
    showNextImage();
  }
</script>
