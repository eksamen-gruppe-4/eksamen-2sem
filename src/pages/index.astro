            class="gallery-item"
            src="../img/galleri1.webp"
            alt="gaia"
          />
          <img
            id="img2"
            class="gallery-item"
            src="../img/galleri2.webp"
            alt="setup"
          />
          <img
            id="img3"
            class="gallery-item"
            src="../img/galleri3.webp"
            alt="hårvask"
          />
          <img
            id="img4"
            class="gallery-item"
            src="../img/galleri4.webp"
            alt="hår"
          />
          <img
            id="img5"
            class="gallery-item"
            src="../img/galleri5.webp"
            alt="hår"
          />
          <img
            id="img6"
            class="gallery-item"
            src="../img/galleri6.webp"
            alt="gaia"
          />
